{
	"posts": [
		{% for post, conf in posts %}
		{
			"id":"{{ post.id }}",
			"title": "{{ post.title.decode('utf-8') }}",
			"text": "{{ post.text.decode('utf-8') }}",
			"confidence": {
				"category": "{{ conf.category }}",
				"conf": {{ conf.conf }}
			},
            "demand_votes": {{ post.demand_votes }},
            "category_votes": {{ post.category_votes }}
		}
			{% if not loop.last %}
			,
			{% endif %}
		{% endfor %}
	]
}
